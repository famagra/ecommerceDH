<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>
<title>Perfil</title>

<body class="fondo">
    <!--header-->
    <%- include('./partials/header.ejs')%>

    <div class="container">


        <div class="col-12 my-3 pt-2 shadow  text-center">
            <h3 class="tienda">Bienvenido <%= usuario.nombre %></h3>
            <img class="rounded-circle mr-4 mt-2 mb-2" src="/images/users/<%= usuario.avatar %>">
        </div>



        <div class="col-12 my-3 pt-2 shadow mt-2">

            <label for="">Nombre </label>
            <input type="text" class="form-control " id="nombre" name="nombre" value="<%= usuario.nombre %>" disabled>
            <br>
            <label for="">Apellido </label>
            <input type="text" class="form-control" id="apellido" name="apellido" value="<%= usuario.apellido %>"
                disabled>
            <br>
            <label for="">Email </label>
            <input type="text" class="form-control" id="email" name="email" value="<%= usuario.email %>" disabled>
            <br>


            <form action="/user/logout" class="my-3 pt-2 mt-2 mb-2 pb-1">
                <button class="btn-carga btn-sm btn-block" type="submit" disabled>
                    EDITAR PERFIL</button>
            </form>
            <form action="/user/logout" class="my-3 pt-2 mt-2 mb-5 pb-2">
                <button class="btn-carga btn-sm btn-block btn btn-danger" type="submit">CERRAR
                    SESIÃ“N</button>
            </form>
        </div>



    </div>

    <!--footer-->
    <%- include('./partials/footer.ejs')%>
    <!--ScripDeBoostrapt-->
    <%- include('./partials/comunicacion.ejs')%>
    <%- include('./partials/scripts.ejs')%>
    <script src="/js/mostrarCarrito.js"></script>
    <script src="/js/carrito.js"></script>
    <script src="/js/compra.js"></script>

</body>

</html>