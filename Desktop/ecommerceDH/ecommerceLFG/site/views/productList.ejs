<html lang="en">

<%- include('./partials/head.ejs')%>
<title>Listado de productos</title>

<%- include('./partials/header.ejs')%>

<body class="fondo">
    <!--PRINCIPAL-->

    <div class="container">
        <main class="main">
            <!--Titulo y servicios-->
            <div class="container mt-4 text-center">
                <h1 class="tienda"> CATALAGO DE PRODUCTOS</h1>

                <div class="row">
                    <div class="container">
                        <br>
                        <table class=" col-12 md table table-hover table-responsive-md ">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Editar</th>
                                    <th>Nombre</th>
                                    <th>Marca</th>
                                    <th>Precio</th>

                                    <th>Stock</th>
                                    <th>Color</th>
                                    <th>Categoria</th>
                                    <th>Descripci√≥n</th>
                                </tr>
                            </thead>
                            <% productos.forEach(producto => { %>
                            <tbody>
                                <tr>
                                    <td><a href="/product/edit/<%= producto.id%>"><button type="button"
                                                class="btn btn-info btn-sm">Modificar</button></a></td>
                                    <td><%=producto.nombre  %> </td>
                                    <td><%=producto.marca.nombre  %></td>
                                    <td><%=producto.precio  %></td>

                                    <td><%=producto.stock  %></td>
                                    <td><%=producto.color.nombre  %></td>
                                    <td><%=producto.categoria.descripcion  %></td>
                                    <td><%=producto.descripcion  %></td>

                                </tr>
                            </tbody>
                            <% }) %>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!--footer-->
    <%- include('./partials/footer.ejs')%>
    <%- include('./partials/comunicacion.ejs')%>
    <%- include('./partials/scripts.ejs')%>
    <script src="/js/mostrarCarrito.js"></script>
    <script src="/js/carrito.js"></script>
    <script src="/js/compra.js"></script>
</body>

</html>