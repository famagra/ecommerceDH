<html lang="en">

<%- include('./partials/head.ejs')%>
<title>Listado de Usuarios</title>

<body class="fondo">
    <!--PRINCIPAL-->
    <%- include('./partials/header.ejs')%>
    <div class="container">
        <main class="main">
            <!--Titulo y servicios-->
            <div class="container mt-5 text-center">
                <h1 class="tienda"> Nuestros Usuarios</h1>

                <div class="row">
                    <div class="container col-12">


                        <table class="table table-hover mt-5 mb-5" style="text-align: center;">
                            <thead>
                                <tr>
                                    <th>Avatar</th>
                                    <th>Ver</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Tipo De Usuario</th>
                                    <th>Email</th>
                                    <th>Direcci√≥n</th>

                                </tr>
                            </thead>
                            <% usuarios.forEach(usuario => { %>
                            <tbody>
                                <tr>
                                    <td><img class="rounded-circle" src="/images/users/<%= usuario.avatar %>"
                                            style="width: 30%; height: 35%;">
                                    </td>
                                    <td><a href="/user/edit/<%= usuario.id%>"><button type="button"
                                                class="btn btn-info btn-sm">Modificar</button></a></td>
                                    <td><%=usuario.nombre  %> </td>
                                    <td><%=usuario.apellido  %></td>
                                    <th><%=usuario.tipoUsuario.nombre  %></th>
                                    <td><%=usuario.email  %></td>
                                    <td><%=usuario.direccion  %></td>

                                </tr>
                            </tbody>
                            <% }) %>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!--footer-->
    <%- include('./partials/footer.ejs')%>

    <%- include('./partials/scripts.ejs')%>
</body>

</html>