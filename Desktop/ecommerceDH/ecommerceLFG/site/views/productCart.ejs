<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>
<title>Resumen de Compra</title>

<body class="fondo">

    <!--barra de navegacion-->
    <%- include('./partials/header.ejs')%>

    <!--PRINCIPAL-->

    <div class="container">
        <main class="main mt-4">



            <h6 class="tituloCarrito">Resumen de Compra</h6>
            <hr>

            <% if (usuario != null) { %>
            <h6 class="tituloCarrito">HOLA <%= usuario.nombre %> </h6>
            <% } %>
            <hr>


            <div id="carrito1">
                <table class=" detalleCompra table table-striped" id="lista-compra">
                    <thead>
                        <tr>
                            <th scope="col">Imagen</th>
                            <th scope="col">Descipcion</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>

            <hr>


            <div class="row">
                <div class="col-4">

                </div>
                <div class="totalCarrito col-4">
                    <div>
                        SUBTOTAL
                    </div>
                    <div style="color: rgb(34, 235, 34); font-weight: bold;">
                        ENVIO
                    </div>
                    <hr>
                    <div>
                        TOTAL
                    </div>


                </div>
                <div class="col-4" style="text-align: center; font-weight: bold;">
                    <div id="subtotal"> $ </div>
                    <div id="igv" style="color: rgb(34, 235, 34); font-weight: bold;"> GRATIS </div>
                    <hr>
                    <div id="total" style="font-weight: bold;">$ </div>
                </div>
            </div>
            <br>
            <form action="/product" method="GET" id="comprar">
                <div class="mb-4 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg float-right">Finalizar Compra</button>
                </div>
            </form>

            <form action="/product/" method="GET" id="comprar">
                <div class="mb-4 mt-4">
                    <button type="button" class="btn btn-outline-dark btn-sm">Volver</button>

                </div>
            </form>


        </main>
    </div>

    <br>
    <br>
    <%- include('./partials/footer.ejs')%>


    <%- include('./partials/scripts.ejs')%>
    <%- include('./partials/comunicacion.ejs')%>

    <script src="/js/mostrarCarrito.js"></script>
    <script src="/js/carrito.js"></script>
    <script src="/js/compra.js"></script>
</body>

</html>